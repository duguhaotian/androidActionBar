<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dugu.actionbarimpl"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_action_email"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="dugu.actionbarimpl.MainActivity"
            android:label="@string/app_name"
            android:logo="@drawable/logo"
            android:theme="@style/Theme.AppCompat.Light" >
            <meta-data 
                android:name="android.support.PARENT_ACTIVITY"
                android:value="dugu.actionbarimpl.FatherActivity"
                />
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="dugu.actionbarimpl.FatherActivity"
            android:label="@string/title_activity_father" >
        </activity>
    </application>

</manifest>
